<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:interfaces="clr-namespace:MultiConverter.ViewModels.Interfaces;assembly=MultiConverter.ViewModels"
        xmlns:settings="clr-namespace:MultiConverter.Settings"
        xmlns:converters="clr-namespace:MultiConverter.Views.Converters">
    <Design.PreviewWith>
        <Border Padding="20" Background="Green">
            <Border.DataContext>
                <settings:EmptyPage />
            </Border.DataContext>
            <!-- Add Controls for Previewer Here -->
            <Image Classes="NavigationMenu" />
        </Border>
    </Design.PreviewWith>

    <!-- Add Styles Here -->
    <Style Selector="Image.NavigationMenu" x:DataType="interfaces:IPageViewModel">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Width" Value="24" />
        <Setter Property="Height" Value="24" />
        <Setter Property="Margin" Value="4" />

        <Setter Property="Source" Value="{CompiledBinding Icon, Converter={x:Static converters:ImageConverters.ResourceKeyToDrawingImage}}" />
    </Style>
</Styles>
