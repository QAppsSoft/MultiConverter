<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:MultiConverter.ViewModels;assembly=MultiConverter.ViewModels"
             xmlns:views="clr-namespace:MultiConverter.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MultiConverter.Views.MainView" x:DataType="viewModels:MainViewModel">

    <Grid ColumnDefinitions="200 *" RowDefinitions="30 *">

        <!-- Title Bar -->
        <views:TitleBar Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" />

        <!-- Left Pane -->
        <views:LeftPane Grid.Column="0" Grid.Row="1" />

        <!-- Right Pane -->
        <views:RightPane Grid.Column="1" Grid.Row="1" />
    </Grid>

</UserControl>
