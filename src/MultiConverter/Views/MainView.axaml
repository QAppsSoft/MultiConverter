<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:MultiConverter.ViewModels;assembly=MultiConverter.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MultiConverter.Views.MainView" x:DataType="viewModels:MainViewModel"
             Foreground="White"
             Background="#171C2C">

    <Grid ColumnDefinitions="100 *" VerticalAlignment="Stretch">

        <ListBox Grid.Column="0" Items="{CompiledBinding Pages}" SelectedItem="{CompiledBinding SelectedPage}">
            <ListBox.DataTemplates>
                <DataTemplate>
                    <TextBlock Text="{CompiledBinding Name}" />
                </DataTemplate>
            </ListBox.DataTemplates>
        </ListBox>

        <ContentControl Grid.Column="1" Content="{CompiledBinding SelectedPage.ContentViewModel, Mode=OneWay}" />
    </Grid>
</UserControl>
