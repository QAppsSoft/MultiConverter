<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:MultiConverter.ViewModels;assembly=MultiConverter.ViewModels"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:controls="clr-namespace:Material.Styles;assembly=Material.Styles"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MultiConverter.Views.MainView" x:DataType="viewModels:MainViewModel"
             Foreground="White"
             Background="#171C2C">

    <controls:SnackbarHost HostName="Root">
        <controls:NavigationDrawer Name="LeftDrawer">

            <controls:NavigationDrawer.LeftDrawerContent>
                <DockPanel MinWidth="220">
                    <controls:ColorZone DockPanel.Dock="Top" Mode="Accent" Height="180">
                        <StackPanel Margin="16">
                            <ToggleButton HorizontalAlignment="Right"
                                          VerticalAlignment="Top"
                                          DockPanel.Dock="Top"
                                          IsChecked="{Binding ElementName=LeftDrawer, Path=LeftDrawerOpened, Mode=TwoWay}"
                                          Foreground="{DynamicResource MaterialDesignBody}"
                                          Width="32"
                                          Height="32"
                                          Padding="4">
                                <materialIcons:MaterialIcon Kind="ArrowLeft" Width="24" Height="24" />
                            </ToggleButton>

                            <TextBlock
                                Margin="8"
                                DockPanel.Dock="Top"
                                Classes="Headline6"
                                Text="Multi Converter" />
                        </StackPanel>
                    </controls:ColorZone>

                    <ListBox Items="{CompiledBinding Pages}" SelectedItem="{CompiledBinding SelectedPage}">
                        <ListBox.DataTemplates>
                            <DataTemplate>
                                <Grid ColumnDefinitions="32 *">
                                    <materialIcons:MaterialIcon Grid.Column="0" Kind="{CompiledBinding Icon}"
                                                                Width="24" Height="24" Margin="4" />
                                    <TextBlock Margin="4" Classes="Subtitle2" Grid.Column="1" Text="{CompiledBinding Name}"
                                               VerticalAlignment="Center" />
                                </Grid>
                            </DataTemplate>
                        </ListBox.DataTemplates>
                    </ListBox>
                </DockPanel>
            </controls:NavigationDrawer.LeftDrawerContent>

            <DockPanel>
                <controls:ColorZone VerticalAlignment="Top" HorizontalAlignment="Stretch" DockPanel.Dock="Top"
                                    Height="56" Mode="PrimaryMid" ZIndex="1">
                    <Grid ColumnDefinitions="24 32 * 32 Auto" Margin="16">
                        <ToggleButton IsChecked="{Binding ElementName=LeftDrawer, Path=LeftDrawerOpened, Mode=TwoWay}"
                                      Foreground="{DynamicResource MaterialDesignBody}"
                                      Width="32" Height="32" Padding="4">
                            <materialIcons:MaterialIcon Kind="Menu" Width="24" Height="24" />
                        </ToggleButton>
                        <TextBlock Grid.Column="2" Classes="Headline6" Text="{CompiledBinding SelectedPage.Name}"
                                   VerticalAlignment="Center" />
                    </Grid>
                </controls:ColorZone>

                <ContentControl Padding="16" Content="{CompiledBinding SelectedPage.ContentViewModel, Mode=OneWay}" />
            </DockPanel>

        </controls:NavigationDrawer>
    </controls:SnackbarHost>
</UserControl>
