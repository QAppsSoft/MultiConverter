<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:subtitles="clr-namespace:MultiConverter.ViewModels.Presets.Subtitles;assembly=MultiConverter.ViewModels"
             xmlns:view="clr-namespace:MultiConverter.Views.Presets.Subtitles"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MultiConverter.Views.Presets.Subtitles.SubtitleStyleView"
             x:DataType="subtitles:SubtitleStyleViewModel">

    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical" Spacing="4">
            <view:FontsStyleView />
            <view:ColorsStyleView />
        </StackPanel>
    </ScrollViewer>

</UserControl>

